<div class="container">
  <div class="text-center my-4">
    <span class="h1 h1-smaller mr-1">All Tools</span>
    <%= link_to new_tool_path do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </div>
  <div class="tools-container">
    <% @tools.each do |tool| %>
      <%= render partial: 'components/tool-card', locals: { tool: tool } %>
    <% end %>
  </div>
</div>
